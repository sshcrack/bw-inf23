    "#| label: exercise-fig\n",
    "#| fig-cap: Generiertes Metall\n",
    "#| code-fold: true\n",
    "\n",
    "import ipywidgets as widgets\n",
    "from IPython.display import display\n",
    "from PIL import Image\n",
    "import numpy as np\n",
    "from io import BytesIO\n",
    "\n",
    "# Function to create image and get bytes\n",
    "def create_image(value=125):\n",
    "    # Create a 256x256 image with the given value for red channel\n",
    "    img = Image.new('RGB', (256, 256), color=(value, 255, 255))\n",
    "    buffer = BytesIO()\n",
    "    img.save(buffer, format=\"PNG\")\n",
    "    buffer.seek(0)\n",
    "    return buffer.getvalue()\n",
    "\n",
    "# Create initial image\n",
    "image = widgets.Image(\n",
    "    value=create_image(125),\n",
    "    format='png',\n",
    "    width=256,\n",
    "    height=256\n",
    ")\n",
    "\n",
    "# Create a slider\n",
    "slider = widgets.IntSlider(\n",
    "    value=125,\n",
    "    min=0,\n",
    "    max=255,\n",
    "    step=1,\n",
    "    description='Keime',\n",
    ")\n",
    "\n",
    "# Display the slider and image\n",
    "display(slider, image)\n",
    "\n",
    "# Define update function\n",
    "def on_value_change(change):\n",
    "    # Update the image with new value\n",
    "    new_value = change['new']\n",
    "    image.value = create_image(new_value)\n",
    "    print(f\"You selected: {new_value}\")\n",
    "\n",
    "slider.observe(on_value_change, names='value')"
   ]
